<div class="page-content sidebar-page right-sidebar-page clearfix">
  <div class="page-content-wrapper">
    <div class="page-content-inner">
      <div id="page-header" class="clearfix">
        <div class="page-header">
              <h2><span>VENDOR PORTAL:</span> VENDOR NAME</h2>
              <span class="txt">Welcome to Dynamic admin</span>
        </div>
        <div class="spark clearfix">
              <div class="spark-info"><span class="number">2345</span>Visitors</div>
              <div id="spark-visitors" class="sparkline"></div>
        </div>
        <div class="spark clearfix">
              <div class="spark-info"><span class="number">17345</span>Views</div>
              <div id="spark-templateviews" class="sparkline"></div>
        </div>
        <div class="spark clearfix">
              <div class="spark-info"><span class="number">3700$</span>Sales</div>
              <div id="spark-sales" class="sparkline"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-6"><h3 class="m-product">Listing Product Types</h3></div>
            <div class="col-xs-6" align="right"><h4><%= link_to 'New Product type', new_product_type_path , :class=>"btn btn-product "%></h4></div>
          </div>
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Images</th>
                  <th colspan="3">Action</th>
                </tr>
              </thead>
              <tbody>
                <% @product_types.each do |product_type| %>
                  <tr>
                    <td><%= product_type.name %></td>
                    <td><%= image_tag (product_type.image.url(:thumb)) %></td>
                    <td><%= link_to 'Show', product_type %></td>
                    <td><%= link_to 'Edit', edit_product_type_path(product_type) %></td>
                    <td><%= link_to 'Destroy', product_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
 table {
    border-collapse: separate;
    border-spacing: 0 2px;
    width: 100%;
  }
  thead th {
    background-color: #455264;
    color: white;
    height: 48px;
    text-decoration: blink;
    text-align: center;
  }

  tbody td {
    background-color: #FCFCFC;
    text-align: center;
  }
  .btn-product , .btn:hover, .btn:focus{
    background-color: #455264;
    color:white;
  }
  .m-product{
    margin: 8px;
  }
</style>