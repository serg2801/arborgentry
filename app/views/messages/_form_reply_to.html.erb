<%= form_for :message, :url => url_for(:controller => "messages", :action => "message_reply_to",), :html => {:multipart => true} do |f| %>
    <div class="form-group">
      <% message_id = message_obj.id %>
      <%= hidden_field_tag :message_id, message_id %>
      <div class="col-lg-12">
        <!--<pre>-->
        <%= f.text_area :body, as: :summernote, id: "email-reply-text-area" %>
        <!--</pre>-->
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= f.button 'Reply', :class => "btn btn-primary btn-lg" %>
      </div>
    </div>
<% end %>

<script type="text/javascript">
    $(document).ready(function () {
        $('#email-reply-text-area').summernote({
            height: 200,
        });
    });
</script>