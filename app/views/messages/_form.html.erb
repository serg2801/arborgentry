<!-- .page-content -->
<div class="page-content sidebar-page right-sidebar-page clearfix">
  <!-- .page-content-wrapper -->
  <div class="page-content-wrapper">
    <div class="page-content-inner">
      <!-- Start .page-content-inner -->
      <div id="page-header" class="clearfix">
        <div class="page-header">
          <h2>Write Email</h2>
          <span class="txt">Simple email write page</span>
        </div>
        <div class="header-stats">
          <div class="spark clearfix">
            <div class="spark-info"><span class="number">2345</span>Visitors</div>
            <div id="spark-visitors" class="sparkline"></div>
          </div>
          <div class="spark clearfix">
            <div class="spark-info"><span class="number">17345</span>Views</div>
            <div id="spark-templateviews" class="sparkline"></div>
          </div>
          <div class="spark clearfix">
            <div class="spark-info"><span class="number">3700$</span>Sales</div>
            <div id="spark-sales" class="sparkline"></div>
          </div>
        </div>
      </div>
      <div id="email-app-wrapper">
        <!-- Start #email-app-wrapper -->
        <%= render 'site_bar' %>
        <!--End #email-sidebar -->
        <div id="email-content">
          <!-- Start #email-content -->
          <div class="email-wrapper">
            <div class="panel panel-default plain mb0 bshadowNone brad0 bl br bb bt checkall">
              <!-- Start .panel -->
              <div class="panel-body p0">
                <%= render 'site_bar_back_inbox' %>
                <div class="email-write col-lg-12">
                  <%= form_for(@message, :html => {:multipart => true, class: 'form-horizontal'}) do |f| %>

                      <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.text_field :to, :class => "form-control", :placeholder => 'To' %>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="col-lg-12">
                          <%= f.text_field :subject, :class => "form-control", :placeholder => 'Subject' %>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="col-lg-12">
                          <div>
                            <%= f.text_area :body, as: :summernote, id: "email-text-area" %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="col-lg-12">
                          <div class="pull-left">
                            <%= f.submit 'Send', :class => "btn btn-primary btn-lg mr10" %>
                            <%= f.file_field :file, :multiple => true, name: "message_attachments[file][]", class: 'jfilestyle mr10 tip', title: 'Attach file', "data-buttonText" => "<i class='fa fa-paperclip color-gray-light s20'></i>" %>
                            <!--<a href="#" class="mr10 tip" title="Attach file"><i class="fa fa-paperclip color-gray-light s20"></i></a>-->
                            <a href="#" class="mr10 tip" title="Insert files using dropbox"><i class="fa fa-dropbox color-gray-light s20"></i></a>
                            <a href="#" class="mr10 tip" title="Insert photo"><i class="fa fa-image color-gray-light s20"></i></a>
                            <a href="#" class="mr10 tip" title="Insert link"><i class="fa fa-link color-gray-light s20"></i></a>
                          </div>
                        </div>
                      </div>

                  <% end %>
                </div>
              </div>
            </div>
            <!-- End .panel -->
          </div>
          <!--End .email-wrapper -->
        </div>
        <!--End #email-content -->
      </div>
      <!-- End #email-app-wrapper -->
    </div>
    <!-- End .page-content-inner -->
  </div>
  <!-- / page-content-wrapper -->
</div>
<!-- / page-content -->
<script type="text/javascript">
    $(document).ready(function () {
        $('#email-text-area').summernote({
            height: 200,
        });
    });
</script>
