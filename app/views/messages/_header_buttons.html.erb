<script type="text/javascript">
    $(document).ready(function() {
        $(document).on('click', "#refresh_inbox", function () {
            $.ajax({
                type: 'GET',
                dataType: 'JSON',
                url: '<%= refresh_inbox_path %>',
                success: function (data) {
                    location.reload();
                }
            });
        });
    });

</script>
<div class="email-toolbar col-lg-12">
  <div class="pull-left" role="toolbar">
    <button id="email-toggle" class="email-toggle" type="button">
      <span class="sr-only">Toggle email nav</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to '#', class: 'btn btn-default tip mr5', id: 'refresh_inbox', :title => 'Refresh inbox' do %>
        <i class="fa fa-refresh"></i>
    <% end %>
    <a href="#" class="btn btn-default tip mr5" title="Reply"><i class="fa fa-mail-reply"></i></a>
    <a href="#" class="btn btn-default tip mr5" title="Forward"><i class="fa fa-mail-forward"></i></a>
    <a href="#" class="btn btn-danger tip mr5 delete_email move_to_trash_disabled" id="move_to_trash" title="Delete"><i class="fa fa-trash-o"></i></a>
    <a href="#" class="btn btn-default tip mr5" title="Print"><i class="fa fa-print"></i></a>
  </div>
  <ul class="email-pager">
    <% case (params[:action]) %>
    <% when ("show_message_write") %>
    <% when ("new") %>
    <% else %>
        <%= paginate @messages %>
    <% end %>
  </ul>
</div>