<%= form_for @account do |f| %>
    <div class="row">

      <div class="form-group">
        <div class="col-xs-8">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Account Name' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
<% end %>